# Import libraries

import pandas as pd
import numpy as np

# Load CSV files
patients=pd.read_csv('/content/HealthcareData/Patients.csv')
visits=pd.read_csv('/content/HealthcareData/Visits.csv')
diagnoses=pd.read_csv('/content/HealthcareData/Diagnoses.csv')

# Clean Patients dat
# Remove Duplicates
patients=patients.drop_duplicates(subset=['PatientID'], keep='first')

#replacing FirstName[NUll] to Unknown
patients['FirstName'].fillna('unknown', inplace=True)

#Ensure age is Int
patients['Age']=patients['Age'].astype(int)

# Clean Visits data
# convert visit date to datetime
visits['VisitDate']=pd.to_datetime(visits['VisitDate'])

# Ensure cost is float
visits['Cost']=visits['Cost'].astype(float)

# Verify Data Types
print(patients.dtypes)
print(visits.dtypes)
print(diagnoses.dtypes)

# Save Cleaned Data
patients.to_csv('cleaned_patients.csv', index=False)
visits.to_csv('cleaned_visits.csv', index=False)
diagnoses.to_csv('cleaned_diagnoses.csv', index=False)

# Basic Analysis with Numpy
avg_age=np.mean(patients['Age'])
print(f"avg_age: {avg_age: .2f}")
total_cost= np.sum(visits['Cost'])
print(f"total_cost: ${total_cost}")
